{
  "name": "Feel Good Comments",
  "version": "1.0.2",
  "manifest_version": 3,
  "description": "Replaces YouTube comments with a reminder that You're Beautiful.",
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*", 
        "*://youtube.com/*"
	  ],
      "js": ["feelgood.js"]
    }
  ]
}
